/**
 * Description: This program defines a MyPoint class to represent a point with x- and y-coordinates.
 * Brianna Manning
 * 09.02.2024
 * BriannaManning_M02_2
 */

 public class MyPoint {
    public MyPoint(double x, double y) {
        this.x = x;
        this.y = y;
    }

    private double x;
    private double y;

    // to create a point at (0, 0)
    public MyPoint() {
        this.x = 0;
        this.y = 0;
    }

    //to create a point with specified coordinates
   
    public MyPoint(double x, double y) {
        this.x = x;
        this.y = y;
    }

    // Getter method for x coordinate
    public double getX() {
        return x;
    }

    // Getter method for y coordinate
    public double getY() {
        return y;
    }

    //calculate the distance between this point and a specified point
    public double distance(MyPoint point) {
        return Math.sqrt(Math.pow(point.getX() - this.x, 2) + Math.pow(point.getY() - this.y, 2));
    }

    //calculate the distance between this point and a point with specified x and y coordinates
    public double distance(double x, double y) {
        return Math.sqrt(Math.pow(x - this.x, 2) + Math.pow(y - this.y, 2));
    }

    // Static method to calculate the distance between two MyPoint objects
    public static double distance(MyPoint point1, MyPoint point2) {
        return Math.sqrt(Math.pow(point2.getX() - point1.getX(), 2) + Math.pow(point2.getY() - point1.getY(), 2));
    }

    // Main method to test the MyPoint class
    public static void main(String[] args) {
        MyPoint point1 = new MyPoint(); // Create a point at (0, 0)
        MyPoint point2 = new MyPoint(10, 30.5); // Create a point at (10, 30.5)

        //calculate and display the distance between point1 and point2
        System.out.println("Distance between point1 and point2: " + point1.distance(point2));
    }
}
